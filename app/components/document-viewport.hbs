<div id="element-navigation" class="open z-depth-2">
    <select class="input-field"
            {{on 'change' this.setView}}
            {{did-insert this.select}}>
      <option value="fitWidth">Fit Width</option>
      <option value={{75}}>75 %</option>
      <option value={{100}}>100 %</option>
      <option value={{150}}>150 %</option>
      <option value={{200}}>200 %</option>
    </select>
</div>

<div id="document-viewport" {{did-insert this.setup this}}>
  <div class="document" style={{this.style}}>
    {{#each this.fields as |field|}}
      <BasicField @field={{field}}
                  @containerWidth={{this.scaledWidth}}
                  @containerHeight={{this.scaledHeight}} />
    {{/each}}
  </div>
</div>