<div id="element-navigation" class="open z-depth-2">
    <select class="input-field"
            {{on 'change' this.setView}}
            {{did-insert this.setupSelect}}>
      <option value="fitWidth">Fit Width</option>
      <option value={{75}}>75 %</option>
      <option value={{100}}>100 %</option>
      <option value={{150}}>150 %</option>
      <option value={{200}}>200 %</option>
    </select>
</div>

<div id="document-viewport" {{did-insert this.setupViewport this}}>
  <div class="document"
       style="height: {{this.scaledHeight}}px; width: {{this.scaledWidth}}px; background-image: url({{@document.src}})">
    {{#each @document.fields as |field|}}
      <BasicField @field={{field}}
                  @viewport={{this}}
                  @onSetup={{this.setupField}}/>
    {{/each}}
  </div>
</div>