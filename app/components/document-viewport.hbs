<div id="element-navigation" class="open z-depth-2">
    <select class="input-field"
            {{on 'change' this.setView}}
            {{did-insert this.setupSelect}}>
      <option value="fitWidth">Fit Width</option>
      <option value={{75}}>75 %</option>
      <option value={{100}}>100 %</option>
      <option value={{150}}>150 %</option>
      <option value={{200}}>200 %</option>
    </select>
</div>

<div id="document-viewport" {{did-insert this.setupViewport this}}>
  <Document::Background @height={{this.scaledHeight}}
                        @width={{this.scaledWidth}}
                        @src={{@document.src}}>
    {{#each this.cachedFields as |field|}}
      <Document::InteractiveField @field={{field}}
                                  @onMove={{this.movePx}}
                                  @onResize={{this.resizePx}}/>
    {{/each}}
  </Document::Background>
</div>