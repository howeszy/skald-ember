<div class="document-navigation open z-depth-2">
  <div class="document-navigation--header">View</div>

  <div class="row">
    <Form::Select
        class="col s12"
        @label="Zoom"
        @onChange={{this.setView}}>
      <option value="fit" selected>Fit Width</option>
      <option value={{75}}>75 %</option>
      <option value={{100}}>100 %</option>
      <option value={{150}}>150 %</option>
      <option value={{200}}>200 %</option>
    </Form::Select>

    <div class="col s12 center-align">
      <Form::Button @icon="add_circle_outline" @onClick={{this.toggleIsAdding}}>
        {{#if this.isAdding}}
          Adding
        {{else}}
          Add Field
        {{/if}}
      </Form::Button>
    </div>
  </div>

  <hr>

  {{#if (gt this.focused.length 0)}}

    {{#if (eq this.focused.length 1)}}
      <div class="document-navigation--header">Field</div>
      {{#each this.focused as |field|}}
        <Document::Navigation::FieldMetadata @field={{field}} />
      {{/each}}

    {{else}}

      <div class="document-navigation--header">Field</div>
      multiple fields selected
    {{/if}}
  {{/if}}
</div>

<Document::Viewport 
    @document={{@document}}
    @fields={{this.fields}}
    @view={{this.view}}
    @isAdding={{this.isAdding}}
    @onCommit={{this.commit}}
    @onFocus={{this.focus}}
    @onTransform={{this.transform}} />
